<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %boldGreen(%date{dd.MM.yyyy HH:mm:ss} [%thread]) %highlight(%-5level) %boldGreen(%logger{10}) %n%msg%n
            </pattern>
        </encoder>
    </appender>

    <logger name="deng" level="DEBUG"/>

    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>